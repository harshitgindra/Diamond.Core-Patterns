<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
		<Version>5.0.0</Version>
		<FileVersion>5.0.0</FileVersion>
		<AssemblyVersion>5.0.0</AssemblyVersion>
		<Authors>Daniel M. Porrey, Harshit Gindra</Authors>
		<RepositoryType>git</RepositoryType>
		<PackageProjectUrl>https://github.com/porrey/Diamond.Core</PackageProjectUrl>
		<RepositoryUrl>https://github.com/porrey/Diamond.Core</RepositoryUrl>
		<Copyright>Copyright © Daniel Porrey 2019-2021</Copyright>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
		<Description>This library provides interfaces for the Diamond Pattern objects.</Description>
		<PackageIconUrl>https://raw.githubusercontent.com/porrey/Diamond.Core/master/Images/Diamond.Core.png</PackageIconUrl>
		<PackageIcon>Diamond.Core.png</PackageIcon>
		<NeutralLanguage>en-US</NeutralLanguage>
		<Company>Daniel M Porrey</Company>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<PropertyGroup>
		<DocumentationFile>Diamond.Core.Abstractions.xml</DocumentationFile>
		<OutputPath></OutputPath>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Command\**" />
	  <EmbeddedResource Remove="Command\**" />
	  <None Remove="Command\**" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="Ef\IContextFactory.cs" />
	  <Compile Remove="Ef\IDatabaseStrategy.cs" />
	  <Compile Remove="Factory\IEntityFactory.cs" />
	  <Compile Remove="Factory\IObjectFactory.cs" />
	  <Compile Remove="Factory\IRepositoryFactory.cs" />
	  <Compile Remove="Factory\IRequiresInitialization.cs" />
	  <Compile Remove="Models\IEntity.cs" />
	  <Compile Remove="Repository\IQueryableRepository.cs" />
	  <Compile Remove="Repository\IReadOnlyRepository.cs" />
	  <Compile Remove="Repository\IRepository.cs" />
	  <Compile Remove="Repository\IRepositoryContext.cs" />
	  <Compile Remove="Repository\IRepositoryTransactionContext.cs" />
	  <Compile Remove="Repository\IWritableRepository.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\..\Images\Diamond.Core.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="Ef\IContextFactory.cs" />
		<None Include="Ef\IDatabaseStrategy.cs" />
		<None Include="Factory\IEntityFactory.cs" />
		<None Include="Factory\IObjectFactory.cs" />
		<None Include="Factory\IRepositoryFactory.cs" />
		<None Include="Factory\IRequiresInitialization.cs" />
		<None Include="Models\IEntity.cs" />
		<None Include="Repository\IQueryableRepository.cs" />
		<None Include="Repository\IReadOnlyRepository.cs" />
		<None Include="Repository\IRepository.cs" />
		<None Include="Repository\IRepositoryContext.cs" />
		<None Include="Repository\IRepositoryTransactionContext.cs" />
		<None Include="Repository\IWritableRepository.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <None Update="Diamond.Core.Abstractions.xml">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
